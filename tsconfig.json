{
    "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "jsx": "react-native",
      "outDir": "./build/dist",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": false,
      "sourceMap": true,
      "typeRoots": ["node_modules/@types"],
      "moduleResolution": "node",
      "types": ["react", "react-native", "jest"],
      "skipLibCheck": true
    },
    "exclude": [
      "index.android.js",
      "index.ios.js",
      "./build",
      "node_modules",
      "__tests__"
    ],
    "compileOnSave": true
  }
